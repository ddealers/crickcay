<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/finalLvl7_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:columnCount="2"
    tools:context=".FinalStageSeven" >

    <ImageView
        android:id="@+id/puzzle001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/puzzle003"
        android:layout_marginLeft="133dp"
        android:onClick="onGuessClickListener"
        android:src="@drawable/lvl7_tarjeta" />

    <ImageView
        android:id="@+id/puzzle002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/puzzle003"
        android:layout_marginRight="214dp"
        android:onClick="onGuessClickListener"
        android:src="@drawable/lvl7_tarjeta" />

    <ImageView
        android:id="@+id/puzzle003"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@+id/puzzle001"
        android:onClick="onGuessClickListener"
        android:src="@drawable/lvl7_tarjeta" />

    <ImageView
        android:id="@+id/puzzle004"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/puzzle003"
        android:layout_centerVertical="true"
        android:layout_marginRight="174dp"
        android:onClick="onGuessClickListener"
        android:src="@drawable/lvl7_tarjeta" />

    <ImageView
        android:id="@+id/puzzle005"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/puzzle003"
        android:layout_centerVertical="true"
        android:layout_marginLeft="168dp"
        android:onClick="onGuessClickListener"
        android:src="@drawable/lvl7_tarjeta" />

    <ImageView
        android:id="@+id/puzzle006"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/puzzle001"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="82dp"
        android:onClick="onGuessClickListener"
        android:src="@drawable/lvl7_tarjeta" />

    <ImageView
        android:id="@+id/puzzle007"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/puzzle003"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="71dp"
        android:onClick="onGuessClickListener"
        android:src="@drawable/lvl7_tarjeta" />

    <ImageView
        android:id="@+id/puzzle008"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/puzzle002"
        android:layout_alignTop="@+id/puzzle006"
        android:onClick="onGuessClickListener"
        android:src="@drawable/lvl7_tarjeta" />

</RelativeLayout>