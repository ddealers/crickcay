<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/finalLvl_mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/finalStage_background"
    tools:context=".FinalStageBase" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="25dp" >

        <LinearLayout
            android:id="@+id/layout_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/ly_barra_derecha"
            android:gravity="center" >

            <RelativeLayout
                android:id="@+id/finalLvl_lytImagesContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/finalLvl_background"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:scaleType="fitCenter"
                    android:src="@null" />

                <ImageView
                    android:id="@+id/finalLvl_whiteShape6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@null" />

                <ImageView
                    android:id="@+id/finalLvl_whiteShape3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@null" />

                <ImageView
                    android:id="@+id/finalLvl_whiteShape4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@null" />

                <ImageView
                    android:id="@+id/finalLvl_whiteShape7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@null" />

                <ImageView
                    android:id="@+id/finalLvl_whiteShape8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@null" />

                <ImageView
                    android:id="@+id/finalLvl_whiteShape9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@null" />

                <ImageView
                    android:id="@+id/finalLvl_whiteShape1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@null" />

                <ImageView
                    android:id="@+id/finalLvl_whiteShape5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@null" />

                <ImageView
                    android:id="@+id/finalLvl_whiteShape2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@null" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_barra_derecha"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:paddingLeft="25dp" >

            <com.digitalgeko.mobile.android.components.LockableScrollView
                android:id="@+id/finalLvl_scrollView"
                android:scrollbars="none"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@drawable/shape_rounded_corners" >

                <LinearLayout
                    android:id="@+id/finalLvl_scrollLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:animateLayoutChanges="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/finalLvl_shape01"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:adjustViewBounds="true"
                        android:maxHeight="150dp"
                        android:scaleType="fitCenter"
                        android:src="@null" />

                    <ImageView
                        android:id="@+id/finalLvl_shape02"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:adjustViewBounds="true"
                        android:maxHeight="150dp"
                        android:scaleType="fitCenter"
                        android:src="@null" />

                    <ImageView
                        android:id="@+id/finalLvl_shape03"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:adjustViewBounds="true"
                        android:maxHeight="150dp"
                        android:scaleType="fitCenter"
                        android:src="@null" />

                    <ImageView
                        android:id="@+id/finalLvl_shape04"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:adjustViewBounds="true"
                        android:maxHeight="150dp"
                        android:scaleType="fitCenter"
                        android:src="@null" />

                    <ImageView
                        android:id="@+id/finalLvl_shape05"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:adjustViewBounds="true"
                        android:maxHeight="150dp"
                        android:scaleType="fitCenter"
                        android:src="@null" />

                    <ImageView
                        android:id="@+id/finalLvl_shape06"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:adjustViewBounds="true"
                        android:maxHeight="150dp"
                        android:scaleType="fitCenter"
                        android:src="@null" />

                    <ImageView
                        android:id="@+id/finalLvl_shape07"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:adjustViewBounds="true"
                        android:maxHeight="150dp"
                        android:scaleType="fitCenter"
                        android:src="@null" />

                    <ImageView
                        android:id="@+id/finalLvl_shape08"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:adjustViewBounds="true"
                        android:maxHeight="150dp"
                        android:scaleType="fitCenter"
                        android:src="@null" />

                    <ImageView
                        android:id="@+id/finalLvl_shape09"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:adjustViewBounds="true"
                        android:maxHeight="150dp"
                        android:scaleType="fitCenter"
                        android:src="@null" />
                </LinearLayout>
            </com.digitalgeko.mobile.android.components.LockableScrollView>
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/demoHandShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="105dp"
        android:src="@drawable/hand_shadow" />

    <ImageView
        android:id="@+id/demoHand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="510dp"
        android:layout_marginTop="95dp"
        android:src="@drawable/hand" />

</RelativeLayout>