<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:state_pressed="true">
        <shape
            android:shape="oval" >
            
            <solid 
                android:color="@color/yellow" />
            <padding
            	android:left="5dp" 
            	android:top="5dp" 
            	android:right="5dp" 
            	android:bottom="5dp" />

            
        </shape>
    </item>
    <item
        android:state_selected="true">
	    <shape
	            android:shape="oval" >
	            
	            <solid 
	                android:color="@color/yellow" />
	            <stroke 
	                android:color="@color/gray"
	                android:width="2dp" />
	            <padding
	            	android:left="5dp" 
	            	android:top="5dp" 
	            	android:right="5dp" 
	            	android:bottom="5dp" />
	            
	        </shape>
     </item>
    <item>
        <shape
            android:shape="oval" >
            <solid 
                android:color="@color/yellow" />

            <padding
            	android:left="5dp" 
            	android:top="5dp" 
            	android:right="5dp" 
            	android:bottom="5dp" />

        </shape>
        
    </item>

</selector>